const express = require("express");
const router = express.Router();
const db = require("../firestore");

// ğŸ“… Route pour rÃ©cupÃ©rer les rÃ©servations confirmÃ©es d'un utilisateur ou de l'admin
router.get("/bookings", async (req, res) => {
  let { userEmail } = req.query;

  if (!userEmail) {
    return res.status(400).json({ error: true, message: "Missing userEmail" });
  }

  userEmail = userEmail.toLowerCase();
  const isAdmin = String(req.query.isAdmin).toLowerCase() === "true";

  try {
    let snapshot;

    if (isAdmin) {
      snapshot = await db.collection("bookings-ortho")
        .where("event", "==", "Confirmed")
        .get();
    } else {
      snapshot = await db.collection("bookings-ortho")
        .where("email", "==", userEmail)
        .where("event", "==", "Confirmed")
        .get();
    }

    const bookings = [];

    snapshot.forEach(doc => {
      const data = doc.data();
      if (!isAdmin && data.event !== "Confirmed") return;

      bookings.push({
        id: doc.id,
        date: data.date,
        time: data.time,
        email: data.email?.toLowerCase() // ğŸ” normalisation email Ã  l'affichage
      });
    });

    res.json(bookings);
  } catch (err) {
    console.error("âŒ Erreur dans /bookings-ortho:", err);
    res.status(500).json({ error: true, message: "Erreur serveur" });
  }
});

module.exports = router;
